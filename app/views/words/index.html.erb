<% provide :title, t("words") %>
<h1><%= t "words_list" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for words_path, method: :get do |f| %>
      <div class="row">
        <div class="col-md-6">
          <%= select_tag :course_id,
            options_from_collection_for_select(
            @courses, :id, :name, params[:course_id]),
            include_blank: t("filter_all"), class: "form-control" %>
        </div>
        <div class="col-md-6">
          <% Settings.filter_option.each do |key, type| %>
            <label>
              <%= radio_button_tag :option, key,
                (checked = true if params[:option] == key),
                  class: "radio-inline" %>
              <%= t "#{key}" %>
            </label>
          <% end %>
        </div>
      </div>
      <%= f.submit t("filter"), class: "btn btn-default filter-button" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <% if @words.any? %>
      <%= will_paginate %>
      <ul class="word-list">
        <% @words.each do |word| %>
          <li><%= word.content %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
