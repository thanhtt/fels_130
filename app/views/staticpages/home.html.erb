<% provide title: t("home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for current_user %>
          <%= current_user.name %>
        </h1>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
    </aside>
    <div class="col-md-8">
      <div class="row"> 
        <div class="col-md-6">
          <%= link_to t("word_list"), words_path, class: "btn btn-primary" %>
        </div>
        <div class="col-md-6">
          <%= link_to t("lesson"), courses_path, class: "btn btn-info" %>
        </div>
      </div>
      <h3> <%= t "activities" %> </h3>
      <%= render "shared/feed" %>
    </div> 
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "welcome" %></h1>
    <%= link_to t("signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
