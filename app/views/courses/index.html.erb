<% provide title: t("_courses") %>
<% if @courses.any? %>
  <table class="table table-hover">
    <tr>
      <th><%= t "name" %></th>
      <th><%= t "description" %></th>
      <th></th>
    </tr>
    <%= render @courses %>
  </table>
  <div class="text-center">
    <%= will_paginate %>
  </div>
<% else %>
  <%= t :no_items_found %>
<% end %>
